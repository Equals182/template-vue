{
  "private": true,
  "name": "{{ name }}",
  "description": "{{ description }}",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "vue build --config config.js",
    "build": "vue build --config config.js --prod",
    "serve": "serve dist --single"{{#if electron}},
    "postinstall": "install-app-deps",
    "mac": "build --mac",
    "linux": "build --linux deb tar.xz",
    "win": "build --win --ia32",
    "app": "electron app/index.js"{{/if}}
  },
  "author": {
    "name": "{{ username }}",
    "email": "{{ email }}"
  },
  "build": {
    "appId": "com.your-company.app",
    "category": "public.app-category.utilities",
    "asar": true,
    "win": {
      "target": [
        "squirrel"
      ]
    }
  },
  "devDependencies": {
    "copy-webpack-plugin": "^4.0.1",
    "electron": "^1.4.15",
    "electron-builder": "^12.3.1",
    "electron-builder-squirrel-windows": "^11.6.1",
    "eslint": "^3.14.1",
    "eslint-config-xo": "^0.17.0",
    "eslint-plugin-vue": "latest",
    "eslint-loader": "^1.6.1",
    "postcss-nested": "^1.0.0",
    "serve": "^3.1.0",
    "vue-cli": "vuejs/vue-cli"
  }
}
